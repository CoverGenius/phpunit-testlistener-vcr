{
    "name": "covergenius/phpunit-testlistener-vcr",
    "description": "Integrates PHPUnit with PHP-VCR.",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Philipp",
            "email": "mail@adrian-philipp.com"
        }
    ],
    "autoload": {
